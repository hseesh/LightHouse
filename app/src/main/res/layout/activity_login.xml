<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk_img">

    <LinearLayout
        android:layout_marginTop="200dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_reject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:background="@color/colorTransparent"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="注册"
                android:textColor="@color/colorGray"
                android:textSize="19sp" />

            <View
                android:id="@+id/v_reject"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGreen" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:background="@color/colorTransparent"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="登录"
                android:textColor="@color/colorGray"
                android:textSize="19sp" />

            <View
                android:id="@+id/v_login"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">


        <EditText
            android:theme="@style/MyEditText"
            android:id="@+id/ed_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_nickname"
            android:drawableRight="@drawable/ic_nickname"
            android:hint="昵称"
            android:inputType="textEmailSubject"
            android:textColorHint="@color/colorGray" />


        <EditText
            android:theme="@style/MyEditText"
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_email_white_24dp"
            android:drawableRight="@drawable/ic_email_white_24dp"
            android:hint="邮箱"
            android:inputType="textEmailSubject"
            android:textColorHint="#b5e9e3e3" />


        <EditText
            android:theme="@style/MyEditText"
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_lock_white_24dp"
            android:drawableRight="@drawable/ic_lock_white_24dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColorHint="@color/colorGray"
            android:textCursorDrawable="@drawable/cursor_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bk_login_btn"
            android:text="登录"
            android:textColor="@color/colorGray"
            android:textSize="19sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="忘记密码？"
        android:textColor="@color/colorGray"
        android:textSize="12sp" />


</RelativeLayout>
