<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_mission"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/diary"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0872b4"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0872b4" />
        </LinearLayout>

        <EditText
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_below="@+id/title"
            android:padding="11dp"
            android:id="@+id/ed_diary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/tip_diary"
            android:maxLength="600"
            android:minLines="6"
            android:textSize="17sp" />



        <View
            android:layout_below="@+id/ed_diary"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#5555" />

        <TextView
            android:id="@+id/tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:text="@string/title"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_item"
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tile"
            android:orientation="vertical"
            android:paddingTop="10dp">

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_item"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/ic_add" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_item"
            android:layout_marginBottom="65dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text=""
            android:textSize="15sp" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_item"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/line" />
    </RelativeLayout>
</ScrollView>


